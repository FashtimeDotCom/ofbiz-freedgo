    <screen name="EditCategoryRollup">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleEditCategoryRollup"/>
                <set field="tabButtonItem" value="EditCategoryRollup"/>
                <set field="labelTitleProperty" value="ProductRollup"/>
                <set field="productCategoryId" from-field="parameters.productCategoryId"/>

                <set field="middleCrumbLink" value="FindCategory"/>
                <set field="middleCrumbName" value="分类管理"/>
                <set field="currentCrumbName" value="分类汇总"/>
                <entity-one entity-name="ProductCategory" value-field="productCategory"/>
                <entity-condition entity-name="ProductCategoryRollup" list="currentProductCategoryRollups">
                    <condition-expr field-name="productCategoryId" from-field="productCategoryId"/>
                    <order-by field-name="sequenceNum"/>
                </entity-condition>
                <entity-condition entity-name="ProductCategoryRollup" list="parentProductCategoryRollups">
                    <condition-expr field-name="parentProductCategoryId" from-field="productCategoryId"/>
                    <order-by field-name="sequenceNum"/>
                </entity-condition>
                <set field="subContentTitle" value="分类修改(当前分类:${productCategory.categoryName})"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonCategoryDecorator">
                    <decorator-section name="body">
                        <screenlet title="分类汇总:上级分类">
                            <container style="button-bar">
                                <modal-page button-type="button" modal-url="addParentProductCategoryRollup" id="addParentProductCategoryRollup" confirm-message="新增上级分类"
                                            confirm-title="新增上级分类"
                                            description="${uiLabelMap.CommonAdd}">
                                    <parameter param-name="productCategoryId" from-field="productCategoryId"/>
                                </modal-page>
                            </container>
                            <horizontal-separator/>
                            <include-form name="supCategory" location="component://product/widget/catalog/CategoryForms.xml"/>
                        </screenlet>

                        <screenlet title="分类汇总:下级分类">
                            <container style="button-bar">
                                <modal-page button-type="button" modal-url="addProductCategoryRollup" id="addProductCategoryRollup" confirm-message="新增下级分类" confirm-title="新增下级分类"
                                            description="${uiLabelMap.CommonAdd}">
                                    <parameter param-name="parentProductCategoryId" from-field="productCategoryId"/>
                                </modal-page>
                            </container>
                            <horizontal-separator/>
                            <include-form name="subCategory" location="component://product/widget/catalog/CategoryForms.xml"/>
                        </screenlet>
                        <!-- <platform-specific>
                             <html>
                                 <html-template location="component://product/webapp/catalog/category/EditCategoryRollup.ftl"/>
                             </html>
                         </platform-specific>-->
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
