    <screen name="ListSalesOrders">
        <section>
            <actions>
                <property-map resource="OrderUiLabels" map-name="uiLabelMap" global="true"/>
                <set field="filterDate" type="Timestamp" value="${nowTimestamp}"/>
                <script location="component://order/webapp/ordermgr/WEB-INF/actions/order/OrderList.groovy"/>
            </actions>
            <widgets>
                <section>
                    <condition>
                        <if-has-permission permission="ORDERMGR" action="_VIEW"/>
                    </condition>
                    <widgets>
                        <platform-specific>
                            <html>
                                <html-template location="component://order/webapp/ordermgr/order/OrderListByDate.ftl"/>
                            </html>
                        </platform-specific>
                    </widgets>
                    <fail-widgets>
                        <label style="h3" text="${uiLabelMap.OrderViewPermissionError}"/>
                    </fail-widgets>
                </section>
            </widgets>
        </section>
